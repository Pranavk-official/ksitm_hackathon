# Copy this file to `.env` and fill the secret values before running the server.

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (used by Prisma - matches prisma/schema.prisma datasource url)
# Example keeps your current DB host/port but update credentials/database name as needed.
DB_URL=postgres://postgres:postgres@postgres:5435/hackathon_db

# Redis (optional)
REDIS_URL=redis://redis:6381

# JSON Web Token settings
# Use a long, random secret in production.
JWT_ACCESS_SECRET=change-me-to-a-strong-secret
JWT_REFRESH_SECRET=change-me-to-a-strong-secret
JWT_EXPIRES_IN=7d

# # Optional: SMTP (for emails)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_password
# FROM_EMAIL=no-reply@example.com

# Optional: shadow DB for Prisma Migrate when using Postgres
SHADOW_DATABASE_URL=postgres://postgres:postgres@postgres:5435/hackathon_shadow
