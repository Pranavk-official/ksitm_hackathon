{
  "name": "server",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bunx prisma generate && bun build src/index.ts --outdir=dist --target=bun --external mjml",
    "start": "bun run dist/index.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed:user": "bun prisma/user.seed.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^3.0.2",
    "hono": "^4.9.4",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.14.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.41.0"
  }
}